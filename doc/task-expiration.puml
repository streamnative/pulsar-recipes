@startuml

skinparam defaultTextAlignment center

title Expiration

start
:receive\nstate;
switch (receive\nstate)
case (COMPLETED)
    if (expired ?) then (yes)
        #DDDDFF:tombstone\nstate;
        #DDFFDD:acknowledge\nstate;
    else (no)
        #FFDDDD:negative\nacknowledge\ntask;
    endif
case (FAILED)
    if (max\nattempts\nreached ?) then (yes)
        #DDFFDD:acknowledge\ntask;
    else (no)
        if (expired ?) then (yes)
            #DDDDFF:tombstone\nstate;
            #DDFFDD:acknowledge\nstate;
        else (no)
            #FFDDDD:negative\nacknowledge\ntask;
        endif
    endif
case (OTHER)
    #DDFFDD:acknowledge\nstate;
endswitch
end


@enduml